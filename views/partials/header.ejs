  <script>
    // Función para expandir el navbar y mostrar las opciones o contraerlo si las opciones ya están visibles
    function toggleNavbarAndOptions(optionsId) {
      const sidebar = document.querySelector('.sidebar');
      const options = document.getElementById(optionsId);

      if (sidebar.classList.contains('navbar-expanded')) {
        // Si el menú ya está expandido, oculta las opciones y contrae el navbar
        sidebar.classList.remove('navbar-expanded');
        options.style.display = 'none';
      } else {
        // Si el menú no está expandido, expándelo y muestra las opciones
        sidebar.classList.add('navbar-expanded');
        options.style.display = 'block';
      }
    }

    // Agrega un evento de clic al botón "Art" para expandir o contraer el navbar y mostrar u ocultar las opciones
    const artButton = document.getElementById('artistasDropdown');
    artButton.addEventListener('click', () => toggleNavbarAndOptions('artOptions'));

  </script>
